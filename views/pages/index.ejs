<% include ../includes/head %>
        <div class="flex flex-col-reverse sm:flex-row">
                <div class="options bg-teal-500 p-3 pt-8 sm:pt-3 sm:max-w-1/3 sm:mr-0 flex-1 fixed sm:relative z-10 w-full bottom-0">
                    <span class="inline sm:hidden absolute top-0 left-1/2 transform -translate-y-1/2 -translate-x-1/2">
                        <% include ../components/generateBtn %>
                    </span>
                    <div class="job option mb-3 rounded overflow-hidden" id="job-options">
                        <div class="option-bar flex items-center p-4 bg-white border-teal-200 border-b cursor-pointer">
                            <p class="mr-2 text-teal-600">Type:</p>
                            <p class="ml-auto mr-1 text-teal-900 font-bold" id="job-value"></p>
                            <i class="fas fa-chevron-down text-teal-900"></i>
                        </div>
                        <section class="collapsed max-h-40 transition-max-h duration-300 overflow-y-auto">
                            <fieldset>
                                <% Object.keys(options.jobs).forEach(function (key) { %>
                                    <div class="flex items-center bg-white bg-opacity-80 hover:bg-opacity-90 transition-color">
                                        <input class="invisible absolute" type="radio" name="job" value="<%=key%>" id="<%=key%>">
                                        <label class="flex p-5 w-full cursor-pointer" for="<%=key%>">
                                            <i class="<%=options.jobs[key].icon%> text-teal-600 mr-2"></i>
                                            <p class="font-mono font-bold text-sm tracking-wider uppercase text-teal-900">
                                                <%=options.jobs[key].name%>
                                            </p>
                                    </label>
                                </div>
                                <% }); %>
                                
                                <div class="flex items-center bg-white bg-opacity-80 hover:bg-opacity-90 transition-color">
                                    <input class="invisible absolute" type="radio" name="job" value="randomjob" id="randomjob">
                                    <label class="flex p-5 w-full cursor-pointer" for="randomjob">
                                        <i class="fas fa-dice text-teal-600 mr-2"></i>
                                        <p class="font-mono font-bold text-sm tracking-wider uppercase text-teal-900">
                                            Random
                                        </p>
                                    </label>
                                </div>
                            </fieldset>
                        </section>
                    </div>
                    <div class="industry option mb-3 rounded overflow-hidden" id="industry-options">
                        <div class="option-bar flex items-center p-4 bg-white border-teal-200 border-b cursor-pointer">
                            <p class="mr-2 text-teal-600">Industry:</p>
                            <p class="ml-auto mr-1 text-teal-900 font-bold" id="industry-value"></p>
                            <i class="fas fa-chevron-down text-teal-900"></i>
                        </div>
                        <section class="collapsed max-h-40 transition-max-h duration-300 overflow-y-auto">
                            <fieldset>
                                <% Object.keys(options.industries).forEach(function (key) { %>
                                    <div class="flex items-center bg-white bg-opacity-80 hover:bg-opacity-90 transition-color">
                                        <input class="invisible absolute" type="radio" name="industry" value="<%=key%>" id="<%=key%>">
                                        <label class="flex p-5 w-full cursor-pointer" for="<%=key%>">
                                            <i class="<%=options.industries[key].icon%> text-teal-600 mr-2"></i>
                                            <p class="font-mono font-bold text-sm tracking-wider uppercase text-teal-900">
                                                <%=options.industries[key].name%>
                                            </p>
                                        </label>
                                    </div>
                                    <% }); %>
                                    
                                    <div class="flex items-center bg-white bg-opacity-80 hover:bg-opacity-90 transition-color">
                                        <input class="invisible absolute" type="radio" name="industry" value="randomindustry" id="randomindustry">
                                        <label class="flex p-5 w-full cursor-pointer" for="randomindustry">
                                            <i class="fas fa-dice text-teal-600 mr-2"></i>
                                            <p class="font-mono font-bold text-sm tracking-wider uppercase text-teal-900">
                                                Random
                                            </p>
                                        </label>
                                    </div>
                                </fieldset>
                            </section>
                        </div>
                        <p class="text-white">Made by <a href="https://manuodelrio.com/" class="font-bold underline">Manu</a></p>
                    </div>
            <div class="brief loading relative bg-white sm:rounded p-4 mb-10 w-full sm:max-w-2/3 flex-1 self-start">
                <h2 class="font-mono font-bold text-sm text-teal-900 opacity-50 tracking-wider uppercase">Design Brief</h2>
                <div class="skeleton">
                    <div class="skeleton-header"></div>
                    <div class="skeleton-p "></div>
                    <div class="skeleton-header"></div>
                    <div class="skeleton-p "></div>
                    <div class="skeleton-p "></div>
                    <div class="skeleton-header"></div>
                    <div class="skeleton-p "></div>
                    <div class="skeleton-p "></div>
                    <div class="skeleton-header"></div>
                </div>
                <div class="content text-teal-900 min-h-full pb-40 sm:p-0">
                    <h3 class="font-bold mt-4" id="name-label">Company Name: </h3>
                    <p id="brief-name"></p>
                    <h3 class="font-bold mt-4">Company Description: </h3>
                    <p id="brief-desc"></p>
                    <h3 class="font-bold mt-4">Job Description: </h3>
                    <p id="brief-job"></p>
                    <h3 class="font-bold mt-4">Deadline: </h3>
                    <p id="brief-deadline"></p>
                </div>
                <span class="hidden sm:inline-block relative left-1/2 transform -translate-x-1/2 translate-y-3/4 hover:translate-y-2/3">
                    <% include ../components/generateBtn %>
                </span>
            </div>
        </div>
            <% include ../includes/footer %>