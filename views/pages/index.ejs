<% include ../includes/head %>
    <div class="flex flex-col-reverse sm:flex-row">
        <div
            class="options bg-teal-500 dark:bg-black p-3 pt-9 sm:pt-0 sm:pl-0 sm:max-w-1/3 sm:mr-0 flex-1 fixed sm:relative z-10 w-full bottom-0 transition-colors duration-1000">
            <div
                class="sm:hidden opacity-100 dark:opacity-0 absolute w-full h-16 -top-16 left-0 bg-gradient-to-t from-white to-white-trn transition-opacity duration-1000">
            </div>
            <div
                class="sm:hidden opacity-0 dark:opacity-100 absolute w-full h-16 -top-16 left-0 bg-gradient-to-t from-dark-teal to-dark-teal-trn transition-opacity duration-1000">
            </div>
            <span class="inline sm:hidden absolute top-0 left-1/2 transform -translate-y-1/2 -translate-x-1/2">
                <% include ../components/generateBtn %>
            </span>
            <div class="job option mb-3 rounded overflow-hidden bg-white dark:bg-teal-900 bg-opacity-80 dark:bg-opacity-50 transition-colors duration-1000"
                id="job-options">
                <div
                    class="option-bar flex items-center p-4 bg-white dark:bg-transparent border-teal-200 dark:border-teal-900 border-b cursor-pointer transition-colors duration-1000">
                    <p class="mr-2 text-teal-600">Type:</p>
                    <p class="ml-auto mr-1 text-teal-900 dark:text-white font-bold transition-colors duration-1000"
                        id="job-value"></p>
                    <ion-icon name="chevron-down-outline"
                        class="text-teal-900 dark:text-white transition-colors duration-1000"></ion-icon>
                </div>
                <section class="collapsed max-h-40 sm:max-h-96 transition-max-h duration-300 overflow-y-auto">
                    <fieldset>
                        <% Object.keys(options.jobs).forEach(function (key) { %>
                            <div
                                class="flex items-center bg-teal-200 dark:bg-teal-900 hover:bg-teal-100 dark:hover:bg-teal-800 transition-colors duration-200">
                                <input class="invisible absolute" type="radio" name="job" value="<%=key%>"
                                    id="<%=key%>">
                                <label class="flex p-3 w-full cursor-pointer items-center" for="<%=key%>">
                                    <ion-icon name="<%=options.jobs[key].icon%>" size="small"
                                        class="text-teal-500 bg-teal-300 dark:bg-teal-700 rounded-xl p-2 mr-2">
                                    </ion-icon>
                                    <p
                                        class="font-mono font-bold text-sm tracking-wider uppercase text-teal-900 dark:text-white">
                                        <%=options.jobs[key].name%>
                                    </p>
                                </label>
                            </div>
                            <% }); %>
                    </fieldset>
                </section>
            </div>
            <div class="industry option mb-3 rounded overflow-hidden bg-white dark:bg-teal-900 bg-opacity-80 dark:bg-opacity-50 transition-colors duration-1000"
                id="industry-options">
                <div
                    class="option-bar flex items-center p-4 bg-white dark:bg-transparent border-teal-200 dark:border-teal-900 border-b cursor-pointer transition-colors duration-1000">
                    <p class="mr-2 text-teal-600">Industry:</p>
                    <p class="ml-auto mr-1 text-teal-900 dark:text-white font-bold transition-colors duration-1000"
                        id="industry-value"></p>
                    <ion-icon name="chevron-down-outline"
                        class="text-teal-900 dark:text-white transition-colors duration-1000"></ion-icon>
                </div>
                <section class="collapsed max-h-40 sm:max-h-96 transition-max-h duration-300 overflow-y-auto">
                    <fieldset>
                        <% Object.keys(options.industries).forEach(function (key) { %>
                            <div
                                class="flex items-center bg-teal-200 dark:bg-teal-900 hover:bg-teal-100 dark:hover:bg-teal-800 transition-colors duration-200">
                                <input class="invisible absolute" type="radio" name="industry" value="<%=key%>"
                                    id="<%=key%>">
                                <label class="flex p-3 w-full cursor-pointer items-center" for="<%=key%>">
                                    <ion-icon name="<%=options.industries[key].icon%>" size="small"
                                        class="text-teal-500 bg-teal-300 dark:bg-teal-700 rounded-xl p-2 mr-2">
                                    </ion-icon>
                                    <p
                                        class="font-mono font-bold text-sm tracking-wider uppercase text-teal-900 dark:text-white">
                                        <%=options.industries[key].name%>
                                    </p>
                                </label>
                            </div>
                            <% }); %>
                    </fieldset>
                </section>
            </div>
            <div class="mt-8 sm:mt-4 mb-6 flex justify-between sm:flex-col">
                <p class="text-white">Made by <a href="https://manuodelrio.com/" class="font-bold underline">Manu</a>
                </p>
                <p class="text-teal-200 dark:text-teal-600 transition-colors duration-1000"><a
                        href="mailto:hello@goodbrief.io">Feedback?</a></p>
            </div>
        </div>
        <div
            class="brief loading relative bg-white dark:bg-teal-900 dark:bg-opacity-50 sm:rounded p-4 min-h-screen sm:min-h-0 w-full sm:max-w-2/3 flex-1 self-start transition-colors duration-1000">
            <div class="flex justify-between items-center font-mono font-bold text-sm">
                <h2
                    class="font-mono text-teal-900 dark:text-white opacity-50 tracking-wider uppercase transition-colors duration-1000">
                    Design Brief</h2>
                <div
                    class="flex bg-gray-200 dark:bg-teal-900 rounded-full px-2 py-1 font-normal text-gray-800 dark:text-teal-500 transition-colors duration-1000">
                    <button class="export flex hover:underline" onclick="showExportOptions()">
                        <ion-icon class="mr-1 text-base" name="download-outline"></ion-icon>
                        Export
                    </button>
                    <button class="export-pdf flex items-center mr-3 hover:underline hidden"
                        onclick="exportBrief('pdf')">
                        <ion-icon class="mr-1 text-base" name="document-text-outline"></ion-icon>
                        Export PDF
                    </button>
                    <button class="export-img flex items-center hover:underline hidden" onclick="exportBrief('img')">
                        <ion-icon class="mr-1 text-base" name="image-outline"></ion-icon>
                        Export Image
                    </button>
                    <span class="export-loading flex items-center hidden">
                        <ion-icon class="animate-spin mr-2 text-base" name="sync-outline"></ion-icon>
                        Exporting...
                    </span>
                </div>
            </div>
            <div class="skeleton">
                <div class="skeleton-header"></div>
                <div class="skeleton-p "></div>
                <div class="skeleton-header"></div>
                <div class="skeleton-p "></div>
                <div class="skeleton-p "></div>
                <div class="skeleton-header"></div>
                <div class="skeleton-p "></div>
                <div class="skeleton-p "></div>
                <div class="skeleton-header"></div>
            </div>
            <div class="content text-teal-900 dark:text-white min-h-full pb-48 sm:p-0 transition-colors duration-1000">
                <h3 class="font-bold mt-4" id="name-label">Company Name: </h3>
                <p id="brief-name"></p>
                <h3 class="font-bold mt-4">Company Description: </h3>
                <p id="brief-desc"></p>
                <h3 class="font-bold mt-4">Job Description: </h3>
                <p id="brief-job"></p>
                <h3 class="font-bold mt-4">Deadline: </h3>
                <p id="brief-deadline"></p>
            </div>
            <span
                class="hidden sm:inline-block relative left-1/2 transition-all transform -translate-x-1/2 translate-y-3/4 hover:translate-y-2/3">
                <% include ../components/generateBtn %>
            </span>
        </div>
    </div>
    <% include ../includes/footer %>